# --------------
# Rain inference
# --------------
#
# Infer that the grass becomes wet.

@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix : <#>.

:currentWeather a :NormalWeather.
:obs1 :ascribed :Rain.

() lingua:nand _:ng1.

_:ng1 {
    :currentWeather a :NormalWeather.
    () lingua:nand _:ng2.
}

_:ng2 {
    (_:S) lingua:nand _:ng3.
}

_:ng3 {
    _:S :ascribed :Rain.
    () lingua:nand _:ng4.
}

_:ng4 {
    _:S :ascribed :WetGrass.
}

# query
(_:S _:O) lingua:question _:qs.

_:qs {
    _:S :ascribed _:O.
}
